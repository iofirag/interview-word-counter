  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debugging App",
      "type": "python",
      "request": "launch",
      "program": "app/app.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/app",
        "FLASK_DEBUG": "1"
      }
    },
    {
      "name": "Python: Debugging App Test",
      "type": "python",
      "request": "launch",
      "program": "app/test_app.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
